.course_detail{
  width: 300px;
  overflow: hidden;
  border-radius: 20px;
  margin: 0 auto;
  margin-top: 2em;
  padding-bottom: 0.8em;
  background: #fff;
  box-shadow: 2px 5px 50p #d1d1d1;
}
.course_detail .course_wrapper{
  width:100%;
  height: 180px;
}

.course_detail .public_date{
  display: block;
  line-height: 3em;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
}

.course_detail .course_title{
  letter-spacing: 0.1em;
  margin-bottom: 2em;
  padding: 0 0.5em;
  line-height: 1.25em;
}

.btn_box .btn{
  width: 150px;
  margin: 20px auto;
  text-align: center;
  line-height: 3em;
  font-size: 12px;
  border-radius: 36px;
}
.btn_box .btn.learn_btn{
  background: #333;
  color: #fff;
  border: 1px solid #222;
}

.btn_box .btn.card_btn{
  background: rgb(241,223,52);
  border: 1px solid #ffc12b;
}

